<!DOCTYPE html>
<html>
<head>
  <title><%= t('payroll.report') %></title>
  <%= favicon_link_tag    "favicon.ico", :rel => "shortcut icon" %>
  <%= favicon_link_tag    "favicon.ico", :rel => "icon", :type => "image/x-icon" %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "payslip" %>
  <%= csrf_meta_tags %>
</head>
<body class="ui-widget-content">
  <table class="heading">
    <tr>
      <td valign="top">NAME : <%= @employee.firstname%> <%= @employee.middlename %> <%= @employee.lastname %></td>
      <td align="right">
        <table>
          <tr>
            <td align="left">PERIOD</td>
            <td> : <%= @period %></td>
          </tr>
          <tr>
            <td align="left">EMPLOYEE CODE</td>
            <td> : <%= @employee.code %></td>
          </tr>
          <tr>
            <td align="left">IC NO.</td>
            <td> : <%= @employee.icno %></td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
  <table class="data_table">
    <thead>
      <tr>
        <th>--- EARNINGS ---</th>
        <th class="amt"><span>--- RM ---</span></th>
        <th>--- DEDUCTIONS ---</th>
        <th class="amt"><span>--- RM ---</span></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><span class="det">BASIC PAY</span></td>
        <td class="amt"><span><%= number_to_currency @employee.salary, '' %></span></td>
        <td><span class="det">EMPLOYEE EPF</span></td>
        <td class="amt"><span><%= number_to_currency @setting.epf, '' %></span></td>
      </tr>
      <tr>
        <td><span class="det">DAILY ALLOWANCE</span></td>
        <td class="amt"><span><%= number_to_currency @setting.dailyallowance, '' %></span></td>
        <td><span class="det">EMPLOYEE SOCSO</span></td>
        <td class="amt"><span><%= number_to_currency @setting.socso, '' %></span></td>
      </tr>
      <tr>
        <td></td>
        <td></td>
        <td><span class="det">INCOME TAX</span></td>
        <td class="amt"><span><%= number_to_currency @setting.incometax, '' %></span></td>
      </tr>
      <tr>
        <td class="sum amt"><span>TOTAL : </span></td>
        <td class="sum amt"><span><%= number_to_currency @total_earnings, '' %></span></td>
        <td class="sum amt"><span>TOTAL : </span></td>
        <td class="sum amt"><span><%= number_to_currency @total_deduct, '' %></span></td>
      </tr>
      <tr>
        <td colspan="2"></td>
        <td class="amt"><span>NETT PAY : </span></td>
        <td class="amt"><span><%= number_to_currency @nett_salary, '' %></span></td>
      </tr>
    </tbody>
  </table>
</body>
</html>
