<table>
  <tr>
    <td>
      <%= label_tag :id_staff_id, 'Id', :class => 'label' %>
    </td>
    <td class="colspacing">
      <%= text_field_tag :id_staff_id, nil, :id => 'id_staff_id', :class => 'search', :placeholder => 'type here to search', 
                         :title => 'type here to search' %>
    </td>
    <td>
      <%= label_tag :id_month, 'Month', :class => 'label' %>
    </td>
    <td>
      <select id="id_month" class="select">
        <option value="0">All</option>
        <%= options_for_select(@month_hash) %>
      </select>
    </td>
  </tr>
  <tr>
    <td>
      <%= label_tag :id_year, 'Year', :class => 'label' %>
    </td>
    <td class="colspacing">
      <%= text_field_tag :year, nil, :id => 'id_year', :class => 'search', :placeholder => 'type here to search', 
                         :title => 'type here to search' %>
    </td>
    <td colspan="2"></td>
  </tr>
</table>
<br />
<% @include_search = true %>
<%= render 'shared/panel_button' %>
